<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/charge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#212121"
        android:elevation="8dp">

        <TextView
            android:id="@+id/charge_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/charge_toolbar"
        android:orientation="vertical"
        android:padding="15dp">



        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/charge_event_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="地点"
            app:met_baseColor="#858585"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="事件地点"
            app:met_primaryColor="#858585" />

        <EditText
            android:id="@+id/charge_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:editable="false"
            android:hint="点击获取日期"
            android:textColor="#858585"
            android:textColorHint="#858585"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/charge_event_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_bg"
            android:enabled="true"
            android:gravity="top"
            android:hint="内容"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:scrollbars="vertical"
            android:textColor="#858585"
            android:textColorHint="#858585"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>