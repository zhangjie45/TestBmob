<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_user">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_new_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="72dp"
        android:hint="请输入用户名"
        app:met_baseColor="#858585"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="10"
        app:met_primaryColor="#858585" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_new_userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_user"
        android:layout_below="@+id/et_new_user"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:hint="请输入邮箱"
        app:met_baseColor="#858585"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#858585" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_new_userPassWd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_userEmail"
        android:layout_below="@+id/et_new_userEmail"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:hint="请输入密码"
        app:met_baseColor="#858585"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#858585" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_new_userPassWdAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_userPassWd"
        android:layout_below="@+id/et_new_userPassWd"
        android:layout_marginRight="50dp"
        android:layout_marginTop="12dp"
        android:hint="请再次输入密码"
        app:met_baseColor="#858585"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="#858585" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_userPassWdAgain"
        android:layout_below="@+id/et_new_userPassWdAgain"
        android:layout_marginRight="50dp"
        android:layout_marginTop="62dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_new_userOk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/minshape"
            android:text="确定"
            android:textColor="#858585" />


    </LinearLayout>

</RelativeLayout>